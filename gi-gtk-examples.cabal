data-dir: .
extra-source-files:

source-repository head
    type: git
    location: https://github.com/haskell-gi/gi-gtk-examples

executable gi-gtk-demo-actionMenu
    main-is: ActionMenu.hs
    build-depends:
        gi-gtk -any,
        gi-gtk-hs -any,
        base -any,
        transformers -any,
        text -any
    default-language: Haskell2010
    hs-source-dirs: actionMenu

